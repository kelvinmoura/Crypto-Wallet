<p id="notice"><%= notice %></p>
<h1 align="center"><%= Coin.model_name.human(count: @coins.count)%></h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th><%= @coins.human_attribute_name(:description)%></th>
      <th><%= @coins.human_attribute_name(:acronym)%></th>
      <th><%= @coins.human_attribute_name(:url_image)%></th>
      <th><%= @coins.human_attribute_name(:mining_type)%></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, width: 25, height: 25 %></td>
        <td><%= coin.mining_type.acronym %></td>
        <td><%= link_to t("links.show"), coin %></td>
        <td><%= link_to t("links.edit"), edit_coin_path(coin) %></td>
        <td><%= link_to t("links.delete"), coin, method: :delete, data: { confirm: t("messages.confirm") } %></td>
      </tr>
    <% end %>
      <tr>
      <td><%= link_to t('new.coin'), new_coin_path, class:"btn btn-primary" %></td>
      <td><%= link_to t('showing.mining_type'), mining_types_path, class:"btn btn-primary" %></td>
      <td><%= link_to t('links.back'), inicio_path, class:"btn btn-primary" %></td>
      </tr>
  </tbody>
</table>

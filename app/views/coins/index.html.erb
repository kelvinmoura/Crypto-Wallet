<p id="notice"><%= notice %></p>
<h1 align="center">Moedas</h1>

<table align="center" style="background-color: green;">
  <thead>
    <tr>
      <th>Moeda</th>
      <th>Sigla</th>
      <th>Imagem</th>
      <th>Mining Type</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, width: 25, height: 25 %></td>
        <td></td>
        <td><%= link_to 'Mostrar', coin %></td>
        <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
        <td><%= link_to 'Deletar', coin, method: :delete, data: { confirm: 'Tem certeza que seja apagar essa moeda?' } %></td>
      </tr>
    <% end %>
      <tr>
      <td><%= link_to 'Nova Moeda', new_coin_path %></td>
      <td><%= link_to 'Tipos de mineração', mining_types_path %></td>
      <td><%= link_to "Inicio", inicio_path %></td>
      </tr>
  </tbody>
</table>

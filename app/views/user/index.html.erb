<p id="notice"><%= notice %></p>
<table class="table table-hover" >
  <thead>
    <tr>
      <th><%= t("messages.coins") %></th>
    </tr>
  </thead>
  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.url_image, width: 25, height: 25 %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: 'Tem certeza que seja apagar essa moeda?' } %></td>
      </tr>
    <% end %>
      <tr>
      <td><%= link_to t('links.back'), inicio_path, class:"btn btn-primary" %></td>
      </tr>
  </tbody>
</table>
